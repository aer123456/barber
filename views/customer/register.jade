extends ../layout
block css 
	link(rel="stylesheet", href="/stylesheets/customer/register.css")
block content
	.body
		#head
			h2 xx造型
			a(href="/") 首页
			a(href="/user") 会员首页
		.content
			table
				tr
					td.title 请输入用户名：
					td 
						input.userId(placeholder='6-12位字母数字混合')
				tr
					td.title 请输入密码：
					td
						input.passWord(placeholder='8-12位数字字母混合')
				tr
					td.title 确认密码：
					td
						input(placeholder='请与上面密码一致')
				tr
					td.title 您的生日：
					td
						select.birthday_year
							option(value="1999") 1999
							option(value="1998") 1998
							option(value="1997") 1997
						select.birthday_month
							option(value="1") 一月
							option(value="2") 二月
							option(value="3") 三月
							option(value="4") 四月
							option(value="5") 五月
							option(value="6") 六月
							option(value="7") 七月
							option(value="8") 八月
							option(value="9") 九月
							option(value="10") 十月
							option(value="11") 十一月
							option(value="12") 十二月
				tr
					td.title 电子邮箱：
					td 
						input.userEmail
				tr
					td.title 手机号：
					td
						input.phoneNumber
				tr
					td.title 输入验证码：
					td
						input.vertify
					td.recomend
						img#vertify(src="", alt="验证码")
			button.confirm(onclick='register()') 确认注册
block footer
	script(src='/javascripts/customer/user_register.js')
block sripts
